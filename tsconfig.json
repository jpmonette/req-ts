{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noStrictGenericChecks": false,
    "strictNullChecks": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": false,
    "declaration": true,
    "typeRoots": [
      "typings"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts"
  ]
}